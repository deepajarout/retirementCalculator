<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const labels = {{{labels}}};
    const totalSavings = {{{totalSavings}}};
    const withdrawals = {{{withdrawals}}};

    const ctx = document.getElementById('retirementChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [
                {
                    label: 'Total Savings',
                    data: totalSavings,
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 2,
                    fill: false,
                },
                {
                    label: 'Withdrawals',
                    data: withdrawals,
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 2,
                    fill: false,
                },
            ],
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
            },
        },
    });
</script>


